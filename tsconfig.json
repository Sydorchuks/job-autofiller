{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./build",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
